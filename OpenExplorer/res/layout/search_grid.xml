<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/search_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/search_button_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <include
            android:id="@+id/search_file_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/info_layout" />

        <Button
            android:id="@+id/search_button_open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launch this file"
            android:visibility="invisible" />

        <Button
            android:id="@+id/search_button_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go to this file" />
    </LinearLayout>

</LinearLayout>